<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nagaja.admin.mapper.LoginMapper">

	<resultMap id="AdminAuth" type="com.nagaja.admin.entity.AdminListDto">
		<result column="admin_id" property="adminId" javaType="Integer"/>
		<result column="admin_login_id" property="adminLoginId" javaType="String"/>
		<result column="admin_login_pw" property="adminLoginPw" javaType="String"/>
		<result column="admin_type" property="adminType" javaType="String"/>
		<result column="admin_create_date" property="adminCreateDate" javaType="String"/>
		<result column="admin_modify_date" property="adminModifyDate" javaType="String"/>
	</resultMap>
	
	<!--어드민 로그인-->
	<select id="loadUserByUsername" resultMap="AdminAuth">
		SELECT * FROM admin
		WHERE admin_login_id = #{adminLoginId}
	</select>

</mapper>