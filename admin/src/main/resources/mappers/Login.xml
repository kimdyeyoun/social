<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nagaja.admin.mapper.LoginMapper">

	
	<!--TODO 어드민 로그인-->
	<select id="loadAdminByUsername" parameterType="String" resultType="Admin">
		SELECT * FROM admin
		WHERE admin_login_id = #{adminLoginId}
	</select>

	<!--TODO 어드민 로그인 타임 업데이트-->
	<select id="updateLoginTime" parameterType="String">
		UPDATE admin
		SET admin_modify_date = NOW()
		WHERE admin_login_id = #{adminLoginId}
	</select>

</mapper>