<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nagaja.admin.mapper.AdminMapper">

    <!--TODO 관리자 수 검색-->
    <select id="selectAdminCount" resultType="int">
        SELECT COUNT(*) FROM admin
        <where>
            <if test="admin.adminLoginId != null and !admin.adminLoginId.equals('')">
                AND admin_login_id LIKE CONCAT('%', #{admin.adminLoginId}, '%')
            </if>
            <if test="admin.adminType != null and !admin.adminType.equals('whole')">
                AND admin_type = #{admin.adminType}
            </if>
        </where>
    </select>

    <!--TODO 관리자 검색-->
    <select id="selectAdminList" parameterType="Admin" resultType="Admin">
        SELECT * FROM admin
        <where>
            <if test="admin.adminLoginId != null and !admin.adminLoginId.equals('')">
                AND admin_login_id LIKE CONCAT('%', #{admin.adminLoginId}, '%')
            </if>
            <if test="admin.adminType != null and !admin.adminType.equals('whole')">
                AND admin_type = #{admin.adminType}
            </if>
        </where>
        ORDER BY admin_id DESC
        LIMIT #{offset}, #{limit}
    </select>

    <!--TODO 관리자 디테일 검색-->
    <select id="adminDetail" parameterType="int" resultType="Admin">
        SELECT * FROM admin
        WHERE admin_id = #{adminId}
    </select>

    <!--TODO 관리자 등록-->
    <insert id="insertAdmin" parameterType="Admin">
        INSERT INTO admin
        (admin_login_id, admin_login_pw)
        VALUES
        (#{admin.adminLoginId}, #{admin.adminLoginPw})
    </insert>

    <!--TODO 관리자 비밀번호 변경-->
    <update id="changePassword" parameterType="Admin">
        UPDATE admin
        SET admin_login_pw = #{admin.adminLoginPw}
        WHERE admin_id = #{admin.adminId}
    </update>

    <!--TODO 관리자 삭제-->
    <delete id="deleteAdmin" parameterType="int">
        DELETE FROM admin
        WHERE admin_id = #{adminId}
    </delete>

</mapper>